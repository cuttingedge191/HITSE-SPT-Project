<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hit.spt.mapper.CustomerMapper">
    <select id="queryCustomerList" resultType="Customer">
        select *
        from spt.customer_info
    </select>
    <insert id="insertCustomer" parameterType="Customer">
        insert into customer_info(c_id, type, name, gender, phone, address)
        values (#{c_id}, #{type}, #{name}, #{gender}, #{phone}, #{address})
    </insert>
    <delete id="deleteCustomerById" parameterType="java.lang.Integer">
        delete
        from customer_info
        where c_id = #{c_id}
    </delete>
</mapper>