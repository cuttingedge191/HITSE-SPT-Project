<!--pages/history_order/notReceived/index.wxml-->
<!--pages/history_order/unpayed/index.wxml-->
<view class="container">
 
 <van-tabs sticky bind:click="changePage" active="{{active}}">
   <van-tab title="待审核"  ></van-tab>
   <van-tab title="未付款" ></van-tab>
   <van-tab title="待收货" ></van-tab>
   <van-tab title="其他订单" >
    <view 
     wx:for="{{orders}}"
     wx:key="order_id"
     
      class="order_item">
      <view class="order_no_row">
        <view class="order_no_text">订单编号</view>
        <view class="order_no_value">{{item.order_number}}</view>
      </view>
      <view class="order_price_row">
        <view class="order_price_text">订单价格</view>
        <view class="order_price_value">￥{{item.order_price}}</view>
      </view>
      <view class="order_time_row">
        <view class="order_time_text">订单日期</view>
        <view class="order_time_value">{{item.order_time}}</view>
      </view>
     </view>
   </van-tab>
 </van-tabs>
 </view>
 


