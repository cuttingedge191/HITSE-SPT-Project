<!--pages/login/index.wxml-->
<view class="container">
  <van-cell-group>
  <van-field
    value="{{ username }}"
    clearable
    label="用户名"
    placeholder="请输入用户名"
  />
  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
  />
  <van-button round type="info" block>登录</van-button>
</van-cell-group>

</view>
