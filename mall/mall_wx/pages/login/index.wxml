<!--pages/login/index.wxml-->
<view class="main">
  <view class="container">
    <van-toast id="van-toast" />
    <form bindsubmit='doLogin'>
      <van-cell-group>
        <van-field label="手机号" placeholder="请输入注册手机号码" name="phone" required />
        <van-field type="password" label="密码" placeholder="请输入密码" name="password" required />
      </van-cell-group>
      <view class="buttons">
        <van-button round size="normal" formType="submit" type="info">登录</van-button>
      </view>
    </form>
    <van-cell label="还没有账号?点击注册" url="/pages/logup/index" />
  </view>
</view>