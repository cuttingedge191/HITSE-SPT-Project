<!--pages/logup/index.wxml-->
<view class="main">
<view class="container">
  <form bindsubmit='doLogup'>
    <van-cell-group>
      <van-field
        value="{{ username }}"
        clearable
        label="用户名"
        placeholder="请输入用户名"
        required
      />
      <van-field
        value="{{ password }}"
        type="password"
        label="密码"
        placeholder="请输入密码"
        required
      />
      <van-field
        value="{{ phone }}"
        clearable
        label="电话号码"
        placeholder="请输入电话号"
        required
      />
      <van-field
        value="{{ addr }}"
        clearable
        label="收货地址"
        placeholder="请输入收货地址"
        required
      />
      <view class="choose_gender">
        <van-radio-group
          value="{{ gender }}"
          bind:change="onChange"
          direction="horizontal"
        >
          <van-radio name="1">男</van-radio>
          <van-radio name="2">女</van-radio>
        </van-radio-group>
      </view>
      <van-row>
        <van-button round type="info" block formType="submit" color="#2acaea">注册</van-button>
      </van-row>
    </van-cell-group>
  </form>
</view>
</view>