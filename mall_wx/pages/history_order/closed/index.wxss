.order_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  color: #666;
}
 .order_item .order_no_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
 .order_item .order_price_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
 .order_item .order_price_row .order_price_value {
  color: var("red");
  font-size: 32rpx;
}
 .order_item .order_time_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_item .order_status_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
